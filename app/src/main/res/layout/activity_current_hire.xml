<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CurrentHireActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        ></RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_1"
        android:orientation="vertical"
        tools:context=".CurrentHireActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp">

            <EditText
                android:id="@+id/enterStation"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="550dp"
                android:ems="10"
                android:inputType="numberSigned" />

            <TextView
                android:id="@+id/tripDistance9"
                android:layout_width="178dp"
                android:layout_height="68dp"
                android:gravity="center"

                android:text="Dystans:"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="false"
                android:layout_marginTop="50dp" />

            <TextView
                android:id="@+id/lengthLabel"
                android:layout_width="233dp"
                android:layout_height="68dp"
                android:layout_alignParentRight="true"

                android:layout_centerHorizontal="false"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="0"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeLabel"
                android:layout_width="208dp"
                android:layout_height="68dp"
                android:layout_alignParentRight="true"

                android:layout_centerHorizontal="false"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text="0"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tripTime9"
                android:layout_width="178dp"
                android:layout_height="68dp"
                android:gravity="center"

                android:text="Czas jazdy:"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="false"
                android:layout_marginTop="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/endHire"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="400dp"
                android:backgroundTint="@color/design_default_color_secondary"
                android:onClick="endHire"
                android:text="Zakończ wypożyczenie" />
        </RelativeLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>